<div class='container'>
  <div class='row'>
    <div class="">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        
        <nav class="navbar navbar-light bg-light">
          <div class="container">管理者ログイン</div>
        </nav>
        
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="field">
          <span>メールアドレス</span>
          <%= f.email_field :email, autofocus: true, class: "name" %>
        </div>
        <div class="field">
          <span>パスワード</span>
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "ログイン" ,class: 'btn btn-primary'%>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>

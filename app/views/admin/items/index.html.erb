<div class='container'>
  <div class='row'>
    <div class="mx-auto col-11 col-lg-8 col-xl-6">

        <nav class="navbar navbar-light bg-light m-auto">
          <span class="container-fluid">商品一覧</span>
        </nav>

        <span><%= link_to '商品の追加', new_admin_item_path, class: "btn btn-success m-3" %></span>

        <table class="table mt-5">
          <thead>
            <tr>
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">税抜き価格</th>
              <th scope="col">ジャンル</th>
              <th scope="col">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <th scope="row"><%= item.id %></th>
                <td><%= link_to item.name, admin_item_path(item), class: "text-dark" %></td>
                <td><%= item.price %></td>
                <% genre = Genre.find(item.genre_id) %>
                <td><%= genre.name %></td>
                <% if item.is_active == true %>
                  <td class="text-success">販売中</td>
                <% else %>
                  <td class="text-secondary">販売停止中</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>
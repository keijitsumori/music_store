<div class='container'>
  <div class='row'>
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <h3 class="m-3">会員情報編集</h2>
      
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>
      
        <div class="field m-2">
          <%= f.label :last_name, "姓　"%><%= f.text_field :last_name, autofocus: true %>
          <%= f.label :first_name, "名　"%><%= f.text_field :first_name, autofocus: true %>
        </div>
      
        <div class="field m-2">
          <%= f.label :last_name_kana_name,"セイ" %><%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.label :first_name_kana, "メイ" %><%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      
        <div class="field m-2">
          <%= f.label :email, "メールアドレス　" %><%= f.email_field :email, autofocus: true %>
        </div>
      
        <div class="field m-2">
          <%= f.label :postal_code, "郵便番号　　　　" %><%= f.text_field :postal_code, autofocus: true %>
        </div>
      
        <div class="field m-2">
          <%= f.label :address, "住所　　　　　　" %><%= f.text_field :address, autofocus: true %>
        </div>
      
        <div class="field m-2">
          <%= f.label :telephone_number, "電話番号　　　　" %><%= f.text_field :telephone_number, autofocus: true %>
        </div>
      
        <span class="actions">
          <%= f.submit "変更内容を保存", class: "btn btn-success m-3" %>
        </span>
      
        <span>
          <%= link_to "退会する", customers_unsubscribe_path, class: "m-3 btn btn-danger" %>
        </span>
      
      <% end %>

    </div>
  </div>
</div>
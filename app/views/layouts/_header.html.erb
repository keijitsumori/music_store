<header>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <span></span>
            </div>
            <div class="col-9">
                <% if customer_signed_in? %>
                  <li><%= link_to ' マイページ',customers_my_page_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                  <li><%= link_to ' 商品一覧',items_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                  <li><%= link_to ' カート',cart_items_path ,class: 'text-dark m-2 btn btn-outline-secondary'%></li>
                  <li><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                <% elsif admin_signed_in? %>
                <div class="container flex-culumn">
                  <div class="row col-12 justify-content-end">
                    <li><%= link_to ' 商品一覧',admin_items_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                    <li><%= link_to ' 会員一覧',admin_customers_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                    <li><%= link_to ' 注文履歴一覧',admin_orders_path ,class: 'text-dark m-2 btn btn-outline-secondary'%></li>
                    <li><%= link_to ' ジャンル一覧', admin_genres_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                    <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                  </div>
                  <div class="row col-12 justify-content-end my-1">
                    <%= form_with url: admin_items_path, method: :get, local: true do |form| %>
                      <%= form.text_field :search %>
                      <%= form.submit 'Search', name: nil %>
                    <% end %>
                  </div>
                </div>
                <% else %>
                  <li><%= link_to ' About',about_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                  <li><%= link_to ' 商品一覧',items_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                  <li><%= link_to ' 新規登録', new_customer_registration_path,class: 'text-dark m-2 btn btn-outline-secondary' %></li>
                  <li><%= link_to ' ログイン', new_customer_session_path ,class: 'text-dark m-2 btn btn-outline-secondary'%></li>
                <% end %>
                </ul>
              </div>
            </div>
        </div>
    </div>
</header>
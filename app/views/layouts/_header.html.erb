<header>
    <div class="container">
        <div class="row">
            <div class="col-5 text-center py-3">
                <h1>MusicStore!!</h1>
            </div>
            <div class="col-5 mx-5 my-3">
                <% if customer_signed_in? %>
                  <span><%= link_to ' マイページ',customers_my_page_path,class: 'text-dark my-2 mx-1 btn btn-outline-secondary' %></span>
                  <span><%= link_to ' 商品一覧',items_path,class: 'text-dark my-2 mx-1 btn btn-outline-secondary' %></span>
                  <span><%= link_to ' カート',cart_items_path ,class: 'text-dark my-2 mx-1 btn btn-outline-secondary'%></span>
                  <span><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete,class: 'text-dark my-2 mx-1 btn btn-outline-secondary' %></span>
                <% elsif admin_signed_in? %>
                <div class="container flex-culumn">
                  <div class="row col-12 justify-content-end">
                    <span><%= link_to ' 商品一覧',admin_items_path,class: 'text-dark m-2 btn btn-outline-secondary' %></span>
                    <span><%= link_to ' 会員一覧',admin_customers_path,class: 'text-dark m-2 btn btn-outline-secondary' %></span>
                    <span><%= link_to ' 注文履歴一覧',admin_orders_path ,class: 'text-dark m-2 btn btn-outline-secondary'%></span>
                    <span><%= link_to ' ジャンル一覧', admin_genres_path,class: 'text-dark m-2 btn btn-outline-secondary' %></span>
                    <span><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete,class: 'text-dark m-2 btn btn-outline-secondary' %></span>
                  </div>
                  <div class="row col-12 justify-content-end my-1">
                    <%= form_with url: admin_items_path, method: :get, local: true do |form| %>
                      <%= form.text_field :search %>
                      <%= form.submit 'Search', name: nil %>
                    <% end %>
                  </div>
                </div>
                <% else %>
                  <span><%= link_to ' About',about_path,class: 'text-dark mx-2 my-2 btn btn-outline-secondary' %></span>
                  <span><%= link_to ' 商品一覧',items_path,class: 'text-dark mx-2 my-2 btn btn-outline-secondary' %></span>
                  <span><%= link_to ' 新規登録', new_customer_registration_path,class: 'text-dark my-2 mx-2 btn btn-outline-secondary' %></span>
                  <span><%= link_to ' ログイン', new_customer_session_path ,class: 'text-dark mx-2 my-2 btn btn-outline-secondary'%></span>
                <% end %>
              </div>
            </div>
        </div>
    </div>
    <div class="border-5 border-top border-dark"></div>
</header>